@using RomMaster.Client.Database.Models;
@page "/datlist"
@inject IHttpClientFactory clientFactory

<h1>Dat List</h1>

<p>(top 100)</p>

@if (list == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Name</th>
                <th>Version</th>
                <th>Author</th>
                <th>Category</th>
                <th>Description</th>
                <th>File</th>
                <th>Games</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in list)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Date?.ToString("yyyy-MM-dd")</td>
                <td>@item.Name</td>
                <td>@item.Version</td>
                <td>@item.Author</td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.File</td>
                <td>@item.Games</td>
            </tr>
            }
        </tbody>
    </table>
}

@functions {
    Dat[] list;

    protected override async Task OnInitAsync()
    {
        var http = clientFactory.CreateClient("default");
        list = await http.GetJsonAsync<Dat[]>("/api/datlist");
    }
}
